{
	"name": "Twic",
	"description": "Twitter client for Google Chrome",
	"version": "0.1",
	"update_url": "http://clients2.google.com/service/update2/crx",
	"browser_action": {
		"popup": "popup.html#accounts",
		"default_icon": "img/icons/toolbar.png"
	},
	"background_page": "background.html",
	"content_scripts": [ {
		"matches" : [
			"https://api.twitter.com/oauth/authorize"
		],
		"css": [
			"css/inline.css"
		],
		"js" : [
			"js/init.js",
			"js/debug.js",
			"js/requests.js",
			"js/inline/auth.js"
		]
	} ],
	"default_locale": "en",
	"permissions": [
		"unlimitedStorage",
		"notifications",
		"tabs",

		"https://api.twitter.com/1/*",
		"https://twitter.com/oauth/*"
	]
}
